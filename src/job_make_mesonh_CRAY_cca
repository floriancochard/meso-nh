set -x
# On va lancer la compilation dans le rÃ©pertoire de lancement du job
cd ${PBS_O_WORKDIR}
pwd

ARCH=LXifort
#ARCH=LXcray
. ../conf/profile_mesonh-${ARCH}-R8I4-MNH-V5-4-2-MPICRAY-O2

time gmake -j 4 2>&1 | tee sortie_compile_${ARCH}.$$
time gmake -j 4 2>&1 | tee sortie_compile_${ARCH}2.$$
time gmake -j 1 installmaster  2>&1 | tee sortie_install_${ARCH}2.$$

